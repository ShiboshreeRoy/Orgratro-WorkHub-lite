<body class="bg-gradient-to-br from-gray-900 via-black to-gray-900 text-blue-100 min-h-screen font-sans antialiased">
  <div class="flex justify-center items-center min-h-screen px-4 py-12">
    <div class="w-full max-w-2xl bg-gray-900/80 backdrop-blur-lg rounded-3xl shadow-2xl border border-gray-700/50 p-8 md:p-12">
      
      <!-- Header Section -->
      <div class="text-center mb-10">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-500/10 rounded-full mb-4 border border-blue-500/30">
          <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-2 tracking-tight">
          Edit Profile
        </h2>
        <p class="text-blue-300/80 text-sm">Update your account information</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource, class: "mb-6" %>

        <!-- Personal Information Section -->
        <div class="bg-gray-800/50 rounded-2xl p-6 border border-gray-700/30">
          <h3 class="text-xl font-semibold text-blue-300 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Personal Information
          </h3>
          
          <!-- Name -->
          <div class="mb-5">
            <%= f.label :name, class: "block mb-2 text-sm font-semibold text-blue-200" %>
            <%= f.text_field :name, autocomplete: "name", 
                class: "w-full rounded-xl border border-gray-700 bg-gray-900/50 px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
          </div>

          <!-- Email -->
          <div class="mb-5">
            <%= f.label :email, class: "block mb-2 text-sm font-semibold text-blue-200" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
                class: "w-full rounded-xl border border-gray-700 bg-gray-900/50 px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
          </div>

          <!-- WhatsApp Number -->
          <div>
            <%= f.label :wp_number, "WhatsApp Number", class: "block mb-2 text-sm font-semibold text-blue-200" %>
            <%= f.text_field :wp_number, autocomplete: "tel", placeholder: "+8801XXXXXXXXX", 
                  class: "w-full rounded-xl border border-gray-700 bg-gray-900/50 px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="mb-6 p-4 bg-blue-900/30 rounded-xl text-blue-300 border border-blue-700/50">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>Currently waiting confirmation for: <span class="font-semibold underline"><%= resource.unconfirmed_email %></span></span>
            </div>
          </div>
        <% end %>

        <!-- Password Section -->
        <div class="bg-gray-800/50 rounded-2xl p-6 border border-gray-700/30">
          <h3 class="text-xl font-semibold text-blue-300 mb-4 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            Security Settings
          </h3>
          
          <!-- Password -->
          <div class="mb-5">
            <%= f.label :password, class: "block mb-2 text-sm font-semibold text-blue-200" %>
            <div class="text-xs text-blue-400/80 mb-2 italic">(leave blank if you don't want to change it)</div>
            <%= f.password_field :password, autocomplete: "new-password",
                class: "w-full rounded-xl border border-gray-700 bg-gray-900/50 px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
            <% if @minimum_password_length %>
              <div class="text-xs text-blue-500/80 mt-2 flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <%= @minimum_password_length %> characters minimum
              </div>
            <% end %>
          </div>

          <!-- Password confirmation -->
          <div class="mb-5">
            <%= f.label :password_confirmation, class: "block mb-2 text-sm font-semibold text-blue-200" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "w-full rounded-xl border border-gray-700 bg-gray-900/50 px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
          </div>

          <!-- Current Password -->
          <div>
            <%= f.label :current_password, class: "block mb-2 text-sm font-semibold text-blue-200" %>
            <div class="text-xs text-blue-400/80 mb-2 italic">(we need your current password to confirm your changes)</div>
            <%= f.password_field :current_password, autocomplete: "current-password", required: true,
                class: "w-full rounded-xl border border-gray-700 bg-gray-900/50 px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= f.submit "Update Profile",
            class: "w-full bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 active:from-blue-700 active:to-blue-800 transition-all duration-300 text-white font-bold py-4 rounded-2xl shadow-lg focus:outline-none focus:ring-4 focus:ring-blue-500/30 transform hover:-translate-y-0.5" %>
        </div>

      <% end %>

      <!-- Divider -->
      <div class="relative my-10">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-700/50"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-gray-900/80 text-gray-500">Danger Zone</span>
        </div>
      </div>

      <!-- Cancel Account Section -->
      <div class="bg-red-900/10 rounded-2xl p-6 border border-red-700/30">
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 bg-red-500/10 rounded-full mb-4 border border-red-500/30">
            <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-red-400 mb-3">Cancel Account</h3>
          <p class="mb-6 text-gray-400 max-w-md mx-auto">Permanently delete your account and all associated data. This action cannot be undone.</p>
          <%= button_to "Delete Account", registration_path(resource_name), 
              data: { confirm: "Are you absolutely sure? This will permanently delete your account and cannot be recovered." }, 
              method: :delete, 
              class: "inline-block px-8 py-3 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white rounded-2xl font-semibold shadow-lg focus:outline-none focus:ring-4 focus:ring-red-500/30 transition-all duration-300 transform hover:-translate-y-0.5" %>
        </div>
      </div>

      <div class="mt-8 text-center">
        <%= link_to "â† Back to Dashboard", :back, class: "text-blue-400 hover:text-blue-300 font-semibold inline-flex items-center gap-2 transition-colors" %>
      </div>

    </div>
  </div>
</body>
