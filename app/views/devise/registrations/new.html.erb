<body class="bg-black ">
<div class="min-h-screen flex items-center justify-center bg-black px-4 py-12">
  <div class="w-full max-w-md bg-gradient-to-br from-gray-900 via-gray-950 to-black p-8 rounded-2xl border border-gray-800 shadow-2xl">

    <h2 class="text-4xl font-extrabold text-center mb-8 text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-blue-600 drop-shadow-lg">
      Create Your Account
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

         <div class="mb-6">
            <%= f.label :role, "Role", class: "block text-green-300 text-sm mb-1" %>
            <%= f.select :role, options_for_select(['standard','staff']), {}, class: "w-full p-2 rounded bg-gray-800 text-green-100 border border-green-700 focus:outline-none focus:ring-2 focus:ring-green-400 transition" %>
          </div>

      <!-- Email -->
      <div class="mb-6">
        <%= f.label :email, class: "block text-sm font-semibold text-gray-300 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
            class: "w-full rounded-xl border border-gray-700 bg-gray-800 text-white px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-inner" %>
      </div>

    
      <!-- Password -->
      <div class="mb-6">
        <%= f.label :password, class: "block text-sm font-semibold text-gray-300 mb-2" %>
        <% if @minimum_password_length %>
          <small class="text-xs text-gray-500 block mb-1">(minimum <%= @minimum_password_length %> characters)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", required: true,
            class: "w-full rounded-xl border border-gray-700 bg-gray-800 text-white px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-inner" %>
      </div>

      <!-- Password Confirmation -->
      <div class="mb-8">
        <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-300 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
            class: "w-full rounded-xl border border-gray-700 bg-gray-800 text-white px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-inner" %>
      </div>

      <!-- Submit -->
      <%= f.hidden_field :referral_token, value: params[:ref] || session[:referral_token] %>
  
          <div class="mt-6">
           <%= f.submit "Sign Up",
            class: "w-full py-3 me-2 mt-3  px-4 bg-blue-500 hover:bg-blue-600 active:bg-blue-700 text-white font-bold rounded-lg shadow transition duration-150 ease-in-out focus:outline-none focus:ring-4 focus:ring-blue-400" %>
     
      
          </div>

        
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-400">
     
    </div>
  </div>
</div>
</body>