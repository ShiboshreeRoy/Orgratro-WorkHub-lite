<% content_for :title, "Intern Dashboard" %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-blue-900 to-gray-900 text-white">
  <div class="container mx-auto px-4 py-8">
    
    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="mb-6 p-4 bg-green-900/30 border border-green-700 rounded-xl animate-fade-in">
        <div class="flex items-center">
          <i class="fas fa-check-circle text-green-400 mr-3"></i>
          <span class="text-green-300"><%= flash[:notice] %></span>
        </div>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="mb-6 p-4 bg-red-900/30 border border-red-700 rounded-xl animate-fade-in">
        <div class="flex items-center">
          <i class="fas fa-exclamation-circle text-red-400 mr-3"></i>
          <span class="text-red-300"><%= flash[:alert] %></span>
        </div>
      </div>
    <% end %>
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400">
            ðŸŽ“ Intern Dashboard
          </h1>

          <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-300 hover:text-white" %>
          <p class="text-gray-300 mt-2">Welcome, <%= @user.name.presence || @user.email %>! Complete tasks to level up.</p>
        </div>
        <%= link_to profiles_path, class: "px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 rounded-xl hover:from-purple-700 hover:to-pink-700 transition font-semibold" do %>
          <i class="fas fa-user-circle mr-2"></i>My Profile
        <% end %>
      </div>
    </div>

    <!-- Level Progress Card -->
    <div class="bg-gradient-to-r from-blue-600 to-cyan-500 rounded-2xl p-8 mb-8 shadow-2xl">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <h2 class="text-3xl font-bold mb-2">Level <%= @current_level %> Intern</h2>
          <p class="text-blue-100 text-lg">
            <%= @tasks_completed %> / <%= @required_tasks %> tasks completed
          </p>
          <p class="text-blue-50 mt-2">
            <%= @required_tasks - @tasks_completed %> more tasks to <%= @current_level >= 3 ? "graduate" : "level up" %>!
          </p>
        </div>
        
        <div class="w-full md:w-64">
          <div class="relative pt-1">
            <div class="flex mb-2 items-center justify-between">
              <span class="text-xs font-semibold inline-block text-white">
                Progress
              </span>
              <span class="text-xs font-semibold inline-block text-white">
                <%= @progress_percentage %>%
              </span>
            </div>
            <div class="overflow-hidden h-4 mb-4 text-xs flex rounded-full bg-white/20">
              <div style="width:<%= @progress_percentage %>%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-gradient-to-r from-yellow-400 to-orange-500 transition-all duration-500"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <!-- Balance Card -->
      <div class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-green-100 text-sm">Balance</p>
            <p class="text-3xl font-bold mt-2">$<%= number_with_precision(@total_earned, precision: 2) %></p>
          </div>
          <i class="fas fa-wallet text-5xl text-white/30"></i>
        </div>
      </div>

      <!-- Tasks Completed -->
      <div class="bg-gradient-to-br from-blue-500 to-blue-700 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-blue-100 text-sm">Tasks</p>
            <p class="text-3xl font-bold mt-2"><%= @tasks_completed %></p>
          </div>
          <i class="fas fa-tasks text-5xl text-white/30"></i>
        </div>
      </div>

      <!-- Clicks -->
      <div class="bg-gradient-to-br from-purple-500 to-purple-700 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-purple-100 text-sm">Clicks</p>
            <p class="text-3xl font-bold mt-2"><%= @clicks_completed %></p>
          </div>
          <i class="fas fa-mouse-pointer text-5xl text-white/30"></i>
        </div>
      </div>

      <!-- Courses -->
      <div class="bg-gradient-to-br from-orange-500 to-red-600 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-orange-100 text-sm">Courses</p>
            <p class="text-3xl font-bold mt-2"><%= @courses_completed %></p>
          </div>
          <i class="fas fa-graduation-cap text-5xl text-white/30"></i>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      
   
    

      <!-- Learn & Earn -->
      <div class="bg-gray-800/50 backdrop-blur-lg rounded-2xl p-6 shadow-xl border border-gray-700">
        <h3 class="text-2xl font-bold mb-6 flex items-center text-orange-400">
          <i class="fas fa-book-reader mr-3"></i>
          Learn & Earn
        </h3>
        
        <% if @learn_courses.any? %>
          <div class="space-y-4">
            <% @learn_courses.each do |course| %>
              <div class="bg-gray-700/50 rounded-xl p-4 hover:bg-gray-700 transition border border-gray-600">
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <h4 class="font-semibold text-white"><%= course.title %></h4>
                    <p class="text-gray-300 text-sm mt-1"><%= truncate(course.description, length: 80) %></p>
                    <div class="mt-3 flex items-center space-x-4">
                      <span class="text-green-400 font-semibold">
                        <i class="fas fa-coins mr-1"></i>$<%= course.reward_amount %>
                      </span>
                    </div>
                  </div>
                  <%= link_to "Start Course", admin_learn_and_earns_path, class: "ml-4 px-4 py-2 bg-orange-600 hover:bg-orange-700 rounded-lg text-sm font-semibold transition" %>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- Pagination for Learn Courses -->
          <div class="mt-4 flex justify-center">
            <%= paginate @learn_courses, param_name: :courses_page %>
          </div>
          
          <%= link_to admin_learn_and_earns_path, class: "mt-4 block text-center text-orange-400 hover:text-orange-300 transition" do %>
            View all courses <i class="fas fa-arrow-right ml-1"></i>
          <% end %>
        <% else %>
          <div class="text-center py-8 text-gray-400">
            <i class="fas fa-graduation-cap text-5xl mb-4"></i>
            <p>No courses available.</p>
          </div>
        <% end %>
      </div>

      <!-- My Recent Activity -->
      <div class="bg-gray-800/50 backdrop-blur-lg rounded-2xl p-6 shadow-xl border border-gray-700">
        <h3 class="text-2xl font-bold mb-6 flex items-center text-cyan-400">
          <i class="fas fa-history mr-3"></i>
          Recent Activity
        </h3>
        
        <div class="space-y-3">
          <% if @user_tasks.any? %>
            <% @user_tasks.first(5).each do |user_task| %>
              <div class="flex items-center justify-between bg-gray-700/30 rounded-lg p-3 border border-gray-600">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 rounded-full bg-blue-600 flex items-center justify-center">
                    <i class="fas fa-check text-white"></i>
                  </div>
                  <div>
                    <p class="font-medium text-white"><%= user_task.task.name rescue "Task" %></p>
                    <p class="text-gray-400 text-xs"><%= time_ago_in_words(user_task.created_at) %> ago</p>
                  </div>
                </div>
                <span class="px-3 py-1 rounded-full text-xs font-semibold<%= user_task.status == 'completed' ? 'bg-green-500/20 text-green-400' : 'bg-yellow-500/20 text-yellow-400' %>">
                  <%= user_task.status %>
                </span>
              </div>
            <% end %>
            
            <!-- Pagination for User Tasks -->
            <div class="mt-4 flex justify-center">
              <%= paginate @user_tasks, param_name: :user_tasks_page %>
            </div>
          <% else %>
            <div class="text-center py-8 text-gray-400">
              <i class="fas fa-clock text-4xl mb-3"></i>
              <p>No activity yet. Start completing tasks!</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Intern Learning Tasks -->
      <div class="bg-gray-800/50 backdrop-blur-lg rounded-2xl p-6 shadow-xl border border-gray-700">
        <h3 class="text-2xl font-bold mb-6 flex items-center text-purple-400">
          <i class="fas fa-graduation-cap mr-3"></i>
          Intern Learning Tasks
        </h3>
        
        <% if @available_intern_tasks.any? %>
          <div class="space-y-4">
            <% @available_intern_tasks.each do |task| %>
              <div class="bg-gray-700/50 rounded-xl p-4 hover:bg-gray-700 transition border border-gray-600">
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <h4 class="font-semibold text-lg text-white"><%= task.title %></h4>
                    <p class="text-gray-300 text-sm mt-1"><%= truncate(task.description, length: 100) if task.description.present? %></p>
                    <div class="mt-3 flex items-center space-x-4">
                      <span class="px-2 py-1 rounded-full text-xs font-semibold <%= case task.task_type
                            when 'assignment' then 'bg-purple-500/20 text-purple-400'
                            when 'tutorial' then 'bg-blue-500/20 text-blue-400'
                            when 'project' then 'bg-green-500/20 text-green-400'
                            when 'quiz' then 'bg-yellow-500/20 text-yellow-400'
                            when 'video_learning' then 'bg-red-500/20 text-red-400'
                            else 'bg-gray-500/20 text-gray-400'
                          end %>">
                        <%= task.task_type.humanize %>
                      </span>
                      <% if task.video_url.present? || task.video_file.attached? %>
                        <span class="text-green-400 text-sm flex items-center">
                          <i class="fas fa-video mr-1"></i> Video Content
                        </span>
                      <% end %>
                    </div>
                  </div>
                  <% existing_completion = current_user.intern_task_completions.find_by(intern_task: task) %>
                  <% if existing_completion %>
                    <% if existing_completion.approved? %>
                      <span class="ml-4 px-4 py-2 bg-green-600 rounded-lg text-sm font-semibold transition cursor-not-allowed opacity-70" title="Task completed and approved">Completed âœ“</span>
                    <% elsif existing_completion.submitted? %>
                      <span class="ml-4 px-4 py-2 bg-yellow-600 rounded-lg text-sm font-semibold transition cursor-not-allowed opacity-70" title="Task submitted for review">Submitted</span>
                    <% elsif existing_completion.rejected? || existing_completion.needs_more_proof? %>
                      <%= link_to "Retry Task", new_intern_task_completion_path(intern_task_id: task.id), class: "ml-4 px-4 py-2 #{existing_completion.needs_more_proof? ? 'bg-yellow-600 hover:bg-yellow-700' : 'bg-orange-600 hover:bg-orange-700'} rounded-lg text-sm font-semibold transition", title: "#{existing_completion.needs_more_proof? ? 'More proof requested - please provide better evidence' : 'Task was rejected - please try again'}" %>
                    <% else %>
                      <%= link_to "Start Task", new_intern_task_completion_path(intern_task_id: task.id), class: "ml-4 px-4 py-2 bg-purple-600 hover:bg-purple-700 rounded-lg text-sm font-semibold transition" %>
                    <% end %>
                  <% else %>
                    <%= link_to "Start Task", new_intern_task_completion_path(intern_task_id: task.id), class: "ml-4 px-4 py-2 bg-purple-600 hover:bg-purple-700 rounded-lg text-sm font-semibold transition" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          
          <!-- Pagination for Intern Tasks -->
          <div class="mt-6 flex justify-center">
            <%= paginate @available_intern_tasks, param_name: :page %>
          </div>
        <% else %>
          <div class="text-center py-8 text-gray-400">
            <i class="fas fa-graduation-cap text-5xl mb-4"></i>
            <p>No learning tasks available at the moment.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Graduation Notice -->
    <% if @current_level >= 3 && @tasks_completed >= @required_tasks %>
      <div class="mt-8 bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl p-8 text-center shadow-2xl">
        <i class="fas fa-trophy text-6xl text-yellow-300 mb-4"></i>
        <h2 class="text-3xl font-bold mb-2">ðŸŽ‰ Congratulations!</h2>
        <p class="text-lg mb-4">You've completed all requirements and graduated from the intern program!</p>
        <p class="text-sm mb-6">An admin will review your progress and grant you access to the full dashboard soon.</p>
      </div>
    <% end %>

  </div>
</div>
