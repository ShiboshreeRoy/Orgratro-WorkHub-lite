<div class="min-h-screen bg-black text-green-400 p-6 sm:p-10">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">ðŸ’³ Payment & Subscription Dashboard</h1>
    
    <!-- Payment Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Active Payment Gateways</h3>
        <p class="text-3xl font-bold text-green-400"><%= @payment_gateways.where(is_active: true).count %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Total Gateways</h3>
        <p class="text-3xl font-bold text-green-400"><%= @payment_gateways.count %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Active Subscription Plans</h3>
        <p class="text-3xl font-bold text-green-400"><%= @subscription_plans.where(is_active: true).count %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Total Plans</h3>
        <p class="text-3xl font-bold text-green-400"><%= @subscription_plans.count %></p>
      </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Quick Actions</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4">
        <%= link_to "Manage Gateways", payment_gateways_path, class: "bg-green-700 hover:bg-green-600 text-white p-4 rounded-lg text-center transition" %>
        <%= link_to "Manage Plans", payment_plans_path, class: "bg-purple-700 hover:bg-purple-600 text-white p-4 rounded-lg text-center transition" %>
        <%= link_to "View History", payment_history_path, class: "bg-blue-700 hover:bg-blue-600 text-white p-4 rounded-lg text-center transition" %>
        <%= link_to "Subscriptions", payment_subscription_management_path, class: "bg-yellow-700 hover:bg-yellow-600 text-white p-4 rounded-lg text-center transition" %>
      </div>
    </div>
    
    <!-- Payment Gateways Overview -->
    <div class="bg-gray-900 p-6 rounded-xl border border-green-700 mb-8">
      <h2 class="text-2xl font-semibold mb-4">Payment Gateways</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-green-800">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left">Name</th>
              <th class="px-6 py-3 text-left">Environment</th>
              <th class="px-6 py-3 text-center">Status</th>
              <th class="px-6 py-3 text-center">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-green-800">
            <% @payment_gateways.each do |gateway| %>
              <tr>
                <td class="px-6 py-4 font-semibold"><%= gateway.name %></td>
                <td class="px-6 py-4 capitalize"><%= gateway.environment %></td>
                <td class="px-6 py-4 text-center">
                  <% if gateway.is_active? %>
                    <span class="bg-green-900 text-green-300 px-2 py-1 rounded">Active</span>
                  <% else %>
                    <span class="bg-red-900 text-red-300 px-2 py-1 rounded">Inactive</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-center">
                  <%= link_to "Edit", "#", class: "text-blue-400 hover:text-blue-300" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    <!-- Subscription Plans Overview -->
    <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
      <h2 class="text-2xl font-semibold mb-4">Subscription Plans</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-green-800">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left">Name</th>
              <th class="px-6 py-3 text-left">Price</th>
              <th class="px-6 py-3 text-left">Duration</th>
              <th class="px-6 py-3 text-center">Status</th>
              <th class="px-6 py-3 text-center">Features</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-green-800">
            <% @subscription_plans.each do |plan| %>
              <tr>
                <td class="px-6 py-4 font-semibold"><%= plan.name %></td>
                <td class="px-6 py-4">$<%= plan.price %></td>
                <td class="px-6 py-4"><%= plan.duration_days %> days</td>
                <td class="px-6 py-4 text-center">
                  <% if plan.is_active? %>
                    <span class="bg-green-900 text-green-300 px-2 py-1 rounded">Active</span>
                  <% else %>
                    <span class="bg-red-900 text-red-300 px-2 py-1 rounded">Inactive</span>
                  <% end %>
                </td>
                <td class="px-6 py-4">
                  <% if plan.features.present? %>
                    <% plan.features.split(',').first(3).each do |feature| %>
                      <span class="bg-gray-800 text-green-300 px-2 py-1 rounded text-xs mr-1"><%= feature.strip %></span>
                    <% end %>
                    <% if plan.features.split(',').length > 3 %>
                      <span class="text-gray-500 text-xs">+<%= plan.features.split(',').length - 3 %> more</span>
                    <% end %>
                  <% else %>
                    <span class="text-gray-500">No features defined</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>