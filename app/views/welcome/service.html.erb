    <div id="services-particles" class="absolute inset-0 -z-10"></div>

    <!-- Section Title -->
    <div class="text-center mb-12 animate__animated animate__fadeInDown">
        <h2 class="text-4xl lg:text-5xl font-extrabold text-blue-400 mb-4">
          Our Core Services
        </h2>
        <p class="text-gray-400 text-lg mb-8">Orgratro WorkHub â€“ Driving Efficiency & Growth</p>
        
        <!-- Toggle Button -->
        <button id="toggle-services" class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-8 rounded-full transition duration-300 shadow-lg flex items-center mx-auto gap-2">
