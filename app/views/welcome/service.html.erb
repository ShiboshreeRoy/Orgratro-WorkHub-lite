  </section>

  <!-- ======================= Scripts ======================= -->

  <!-- GSAP -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

  <!-- particles.js -->
  <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

  <!-- Tippy.js Dependencies -->
  <script src="https://unpkg.com/@popperjs/core@2"></script>
  <script src="https://unpkg.com/tippy.js@6"></script>

  <!-- Init Particles -->
  <script>
    particlesJS("services-particles", {
      particles: {
        number: { value: 50, density: { enable: true, value_area: 800 } },
        color: { value: "#3b82f6" },
        shape: { type: "circle" },
        opacity: { value: 0.2, random: true },
        size: { value: 2, random: true },
        line_linked: { enable: true, distance: 150, color: "#3b82f6", opacity: 0.1, width: 1 },
        move: { enable: true, speed: 1.5, direction: "none", random: false, straight: false, out_mode: "out" }
      },
      interactivity: {
        detect_on: "canvas",
        events: { onhover: { enable: true, mode: "grab" }, onclick: { enable: true, mode: "push" } }
      }
    });
  </script>

  <!-- GSAP Animations & Toggle Logic -->
  <script>
    window.onload = () => {
        // Initial Entry Animation
        gsap.from(".service-card", {
          y: 60,
          opacity: 0,
          stagger: 0.15,
          duration: 1,
          ease: "power4.out",
          delay: 0.2
        });

        // Toggle Functionality
        const toggleBtn = document.getElementById('toggle-services');
        const servicesGrid = document.getElementById('services-grid');
        const toggleText = document.getElementById('toggle-text');
        const toggleIcon = document.getElementById('toggle-icon');
        let isVisible = true;

        toggleBtn.addEventListener('click', () => {
          isVisible = !isVisible;
          
          if (isVisible) {
            servicesGrid.classList.remove('hidden-grid');
            toggleText.textContent = 'Hide Services';
            toggleIcon.style.transform = 'rotate(0deg)';
            
            // Re-run GSAP for entrance
            gsap.fromTo("#services-grid .service-card", 
              { y: 30, opacity: 0 }, 
              { y: 0, opacity: 1, stagger: 0.1, duration: 0.6, ease: "power2.out" }
            );
          } else {
            servicesGrid.classList.add('hidden-grid');
            toggleText.textContent = 'Show Services';
            toggleIcon.style.transform = 'rotate(180deg)';
          }
        });
    };
  </script>

  <!-- Tippy Tooltips -->
  <script>
    tippy('.service-card', {
      theme: 'light',
      placement: 'top',
      animation: 'shift-away',
      interactive: true,
    });
  </script>

</body>
</html>