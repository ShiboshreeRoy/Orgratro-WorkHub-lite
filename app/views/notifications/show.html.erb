<div class="container mx-auto p-4">
  <div class="max-w-3xl mx-auto">
    <div class="bg-gray-800 rounded-lg shadow-lg p-6">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-2xl font-bold text-white mb-2"><%= @notification.title %></h1>
          <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full 
                <%= @notification.priority == 'high' ? 'bg-red-500 text-white' : 
                    @notification.priority == 'medium' ? 'bg-yellow-500 text-gray-900' : 
                    'bg-green-500 text-white' %>">
            <%= @notification.priority.capitalize %>
          </span>
        </div>
        <span class="text-sm text-gray-400">
          <%= @notification.created_at.strftime("%b %d, %Y %H:%M") %>
        </span>
      </div>
      
      <div class="prose prose-invert max-w-none">
        <p class="text-gray-300 whitespace-pre-wrap"><%= @notification.message %></p>
      </div>
      
      <div class="mt-6 pt-4 border-t border-gray-700 flex justify-between">
        <div>
          <% if @notification.notification_type %>
            <span class="text-sm text-gray-400 bg-gray-700 px-2 py-1 rounded">
              <%= @notification.notification_type.humanize %>
            </span>
          <% end %>
        </div>
        <div class="flex space-x-2">
          <%= link_to "Back to Notifications", notifications_path, 
              class: "px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition" %>
          <% unless @notification.read? %>
            <%= link_to "Mark as Read", mark_as_read_notification_path(@notification), 
                method: :patch, 
                class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>