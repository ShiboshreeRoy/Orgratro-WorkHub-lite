<% content_for :title, "Complete Task & Earn Money" %>

<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 gap-4">
  <div class="flex items-center gap-3">
    <%= image_tag("task_earn.png", class: "w-10 h-10 cursor-pointer shadow-lg rounded-full bg-blue-500 p-1", title: "Complete Task & Earn Money") %>
    <h1 class="text-2xl font-bold text-white">Complete Task & Earn Money</h1>
  </div>

  <% if current_user.admin? %>
    <%= link_to "New Link", new_link_path, class: "inline-block rounded-lg px-5 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold transition duration-200 shadow-lg hover:shadow-blue-500" %>
  <% end %>
</div>

<!-- Links Grid -->
<div id="links" class="flex justify-center  items-center gap-6">
    <%= render 'link'%>
    
</div>

<!-- Pagination -->
<div class="flex justify-center mt-10 text-white">
 <%= paginate @links,  class: "text-white text-3xl" %>
</div>




<!-- Tailwind Custom Style (optional override) -->
<style>
  body {
    background: linear-gradient(135deg, #0f172a, #1e293b);
    color: #e0f2fe; /* Tailwind blue-200 */
    font-family: 'Inter', sans-serif;
  }
</style>
