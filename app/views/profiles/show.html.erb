<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-blue-300 font-sans antialiased">
  <div class="flex justify-center items-center min-h-screen px-4 py-8">
    <% if @user.present? %>
      <div class="w-full max-w-md bg-gray-800 rounded-3xl shadow-2xl border border-gray-700 p-6 sm:p-8 transform transition-all hover:scale-105">

        <!-- Profile Header -->
        <div class="flex flex-col items-center mb-6">
          <div class="w-24 h-24 sm:w-28 sm:h-28 rounded-full bg-gradient-to-tr from-blue-400 to-purple-500 flex items-center justify-center text-white text-3xl sm:text-4xl font-bold mb-4 animate-pulse">
            <%= @user.name.first.upcase rescue "U" %>
          </div>
          <h2 class="text-2xl sm:text-3xl font-extrabold text-blue-400 text-center tracking-wide">
            <%= @user.admin? ? "Admin Profile" : "#{@user.name}'s Profile" %>
          </h2>
        </div>

        <!-- Profile Info -->
        <div class="space-y-4 sm:space-y-5">
          <div class="flex items-center bg-gray-700 rounded-xl p-3 hover:bg-gray-600 transition-colors">
            <i class="fas fa-user mr-3 text-blue-400"></i>
            <span class="font-semibold text-gray-200">Name:</span>
            <span class="ml-2 text-gray-100">
              <%= @user.name.presence || @user.email.split("@").first.capitalize %>
            </span>
          </div>

          <div class="flex items-center bg-gray-700 rounded-xl p-3 hover:bg-gray-600 transition-colors">
            <i class="fas fa-envelope mr-3 text-blue-400"></i>
            <span class="font-semibold text-gray-200">Email:</span>
            <span class="ml-2 text-gray-100"><%= @user.email %></span>
          </div>

          <div class="flex items-center bg-gray-700 rounded-xl p-3 hover:bg-gray-600 transition-colors">
            <i class="fab fa-whatsapp mr-3 text-green-500"></i>
            <span class="font-semibold text-gray-200">WhatsApp Number:</span>
            <span class="ml-2 text-gray-100"><%= @user.wp_number.presence || "-" %></span>
          </div>
          
          <!-- Stats Section -->
          <div class="mt-4 pt-4 border-t border-gray-600">
            <h3 class="text-lg font-bold text-blue-400 mb-2">Profile Statistics</h3>
            <div class="grid grid-cols-2 gap-2">
              <div class="bg-gray-700 rounded-lg p-2 text-center">
                <div class="text-sm text-gray-300">Links</div>
                <div class="text-xl font-bold text-blue-300"><%= @links.count %></div>
              </div>
              <div class="bg-gray-700 rounded-lg p-2 text-center">
                <div class="text-sm text-gray-300">Clicks</div>
                <div class="text-xl font-bold text-blue-300"><%= @clicks.count %></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Back Button -->
        <div class="mt-6 sm:mt-8 text-center">
          <%= link_to "Back to Dashboard", root_path, 
                class: "inline-block px-5 sm:px-6 py-2 sm:py-3 bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white rounded-2xl font-semibold shadow-lg transition-all transform hover:-translate-y-1" %>
        </div>

      </div>
    <% else %>
      <div class="text-center text-gray-300">
        <p class="text-lg sm:text-xl font-semibold">Profile not found.</p>
      </div>
    <% end %>
  </div>
</body>