<div class="min-h-screen bg-black text-green-400 p-6 sm:p-10">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">ðŸ”— Referral Analytics</h1>
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Total Referrals</h3>
        <p class="text-3xl font-bold text-green-400"><%= @total_referrals %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Successful Referrals</h3>
        <p class="text-3xl font-bold text-green-400"><%= @successful_referrals %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Pending Referrals</h3>
        <p class="text-3xl font-bold text-green-400"><%= @pending_referrals %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Conversion Rate</h3>
        <p class="text-3xl font-bold text-green-400"><%= @referral_conversion_rate %>%</p>
      </div>
    </div>
    
    <!-- Top Referrers -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h2 class="text-2xl font-semibold mb-4">Top Referrers</h2>
        <% if @top_referrers.present? %>
          <ol class="list-decimal pl-5 space-y-2">
            <% @top_referrers.each_with_index do |(user, count), index| %>
              <li class="flex justify-between">
                <span><%= user&.email || 'Unknown' %>:</span>
                <span class="font-bold"><%= count %></span>
              </li>
            <% end %>
          </ol>
        <% else %>
          <p>No top referrers available</p>
        <% end %>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h2 class="text-2xl font-semibold mb-4">Top Referees</h2>
        <% if @top_referees.present? %>
          <ol class="list-decimal pl-5 space-y-2">
            <% @top_referees.each_with_index do |(user, count), index| %>
              <li class="flex justify-between">
                <span><%= user&.email || 'Unknown' %>:</span>
                <span class="font-bold"><%= count %></span>
              </li>
            <% end %>
          </ol>
        <% else %>
          <p>No top referees available</p>
        <% end %>
      </div>
    </div>
    
    <!-- Referral Trends -->
    <div class="bg-gray-900 p-6 rounded-xl border border-green-700 mb-8">
      <h2 class="text-2xl font-semibold mb-4">Referral Trends</h2>
      <div class="h-64 flex items-center justify-center text-gray-500">
        <!-- Chart would be rendered here with JavaScript library -->
        <p>Referral trends chart would appear here (using Chart.js or similar)</p>
      </div>
    </div>
    
    <!-- Referral Sources -->
    <div class="bg-gray-900 p-6 rounded-xl border border-green-700 mb-8">
      <h2 class="text-2xl font-semibold mb-4">Referral Sources</h2>
      <% if @referral_sources.present? %>
        <ul class="space-y-2">
          <% @referral_sources.each do |source, count| %>
            <li class="flex justify-between">
              <span><%= source %>:</span>
              <span class="font-bold"><%= count %></span>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No referral sources available</p>
      <% end %>
    </div>
    
    <!-- Back to Dashboard -->
    <div class="mt-8 text-center">
      <%= link_to "â† Back to Dashboard", analytics_dashboard_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow-md transition" %>
    </div>
  </div>
</div>