<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-white mb-2">Notification Management</h1>
    <p class="text-gray-400">Send and manage global notifications for all users</p>
  </div>

  <!-- Send Global Notification Card -->
  <div class="bg-gradient-to-r from-blue-900/30 to-purple-900/30 border border-blue-700/50 rounded-xl p-6 mb-8">
    <div class="flex items-center gap-3 mb-6">
      <div class="bg-blue-600 p-3 rounded-lg">
        <i class="fas fa-bullhorn text-white text-xl"></i>
      </div>
      <div>
        <h2 class="text-2xl font-bold text-white">Send Global Notification</h2>
        <p class="text-gray-400">Broadcast a message to all users on the platform</p>
      </div>
    </div>

    <%= form_with url: admin_notifications_create_global_path, method: :post, local: true, class: "space-y-6" do |form| %>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div>
          <%= form.label :title, "Title", class: "block text-sm font-medium text-blue-200 mb-2" %>
          <%= form.text_field :title, required: true, class: "w-full p-4 bg-gray-800/50 text-blue-100 border border-blue-400/30 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all", placeholder: "Enter notification title" %>
        </div>

        <div>
          <%= form.label :notification_type, "Type", class: "block text-sm font-medium text-blue-200 mb-2" %>
          <%= form.select :notification_type, options_for_select([
            ['System Message', 'system'],
            ['Announcement', 'announcement'],
            ['Platform Update', 'update'],
            ['Important Warning', 'warning'],
            ['General Info', 'info']
          ]), { prompt: "Select notification type" }, class: "w-full p-4 bg-gray-800/50 text-blue-100 border border-blue-400/30 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all" %>
        </div>
      </div>

      <div>
        <%= form.label :message, "Message", class: "block text-sm font-medium text-blue-200 mb-2" %>
        <%= form.text_area :message, rows: 4, required: true, class: "w-full p-4 bg-gray-800/50 text-blue-100 border border-blue-400/30 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all resize-vertical", placeholder: "Enter your notification message here..." %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <%= form.label :priority, "Priority", class: "block text-sm font-medium text-blue-200 mb-2" %>
          <%= form.select :priority, options_for_select([
            ['Low', 'low'],
            ['Medium', 'medium'],
            ['High', 'high'],
            ['Urgent', 'urgent']
          ], 'medium'), {}, class: "w-full p-3 bg-gray-800/50 text-blue-100 border border-blue-400/30 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all" %>
        </div>

        <div>
          <%= form.label :expires_in, "Expires In (hours)", class: "block text-sm font-medium text-blue-200 mb-2" %>
          <%= form.number_field :expires_in, min: 1, max: 168, placeholder: "24", class: "w-full p-3 bg-gray-800/50 text-blue-100 border border-blue-400/30 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all" %>
        </div>

        <div class="flex items-end">
          <%= form.submit "Send to All Users", class: "w-full bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold py-3 px-6 rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Recent Notifications -->
  <div class="bg-gray-900/50 border border-gray-700 rounded-xl p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-xl font-bold text-white">Recent Notifications</h3>
      <div class="text-sm text-gray-400">
        Showing <%= @notifications.count %> of <%= @total_notifications %> notifications
      </div>
    </div>

    <% if @notifications.any? %>
      <div class="space-y-4">
        <% @notifications.each do |notification| %>
          <div class="bg-gray-800/30 border border-gray-600 rounded-lg p-4 hover:bg-gray-800/50 transition-all">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h4 class="font-semibold text-white"><%= notification.title %></h4>
                  <span class="px-2 py-1 rounded-full text-xs font-medium <%= case notification.notification_type
                    when 'system' then 'bg-gray-600 text-gray-300'
                    when 'announcement' then 'bg-purple-600 text-purple-200'
                    when 'update' then 'bg-blue-600 text-blue-200'
                    when 'warning' then 'bg-red-600 text-red-200'
                    when 'info' then 'bg-green-600 text-green-200'
                    else 'bg-gray-600 text-gray-300'
                    end %>">
                    <%= notification.notification_type&.humanize || 'Info' %>
                  </span>
                  <span class="px-2 py-1 rounded-full text-xs font-medium <%= case notification.priority
                    when 'urgent' then 'bg-red-600 text-red-200'
                    when 'high' then 'bg-orange-600 text-orange-200'
                    when 'medium' then 'bg-yellow-600 text-yellow-200'
                    when 'low' then 'bg-blue-600 text-blue-200'
                    else 'bg-gray-600 text-gray-300'
                    end %>">
                    <%= notification.priority&.humanize || 'Medium' %>
                  </span>
                </div>
                <p class="text-gray-300 text-sm mb-2"><%= notification.message %></p>
                <div class="flex items-center gap-4 text-xs text-gray-500">
                  <span>Created: <%= time_ago_in_words(notification.created_at) %> ago</span>
                  <% if notification.expires_at %>
                    <span>Expires: <%= time_ago_in_words(notification.expires_at) %> from now</span>
                  <% end %>
                  <% if notification.user_id.nil? %>
                    <span class="text-green-400">Global Notification</span>
                  <% else %>
                    <span>User: <%= notification.user.email %></span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-gray-500 mb-4">
          <i class="fas fa-bell-slash text-4xl mb-4"></i>
        </div>
        <h3 class="text-lg font-medium text-gray-400 mb-2">No notifications yet</h3>
        <p class="text-gray-500">Send your first global notification to get started</p>
      </div>
    <% end %>
  </div>
</div>