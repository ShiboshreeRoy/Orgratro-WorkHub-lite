<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white">
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2 flex items-center">
        <span class="text-4xl mr-3">ðŸ‘¥</span>
        User Management
      </h1>
      <p class="text-gray-400">View and manage all registered users</p>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-gradient-to-br from-blue-500/20 to-blue-600/20 backdrop-blur-lg border border-blue-500/30 rounded-xl p-6">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-blue-300 text-sm font-semibold uppercase">Total Users</h3>
          <span class="text-2xl">ðŸ‘¥</span>
        </div>
        <p class="text-3xl font-bold text-blue-400"><%= @users.count %></p>
      </div>

      <div class="bg-gradient-to-br from-green-500/20 to-green-600/20 backdrop-blur-lg border border-green-500/30 rounded-xl p-6">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-green-300 text-sm font-semibold uppercase">Active Users</h3>
          <span class="text-2xl">âœ…</span>
        </div>
        <p class="text-3xl font-bold text-green-400"><%= @users.where(suspended: [false, nil]).count %></p>
      </div>

      <div class="bg-gradient-to-br from-red-500/20 to-red-600/20 backdrop-blur-lg border border-red-500/30 rounded-xl p-6">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-red-300 text-sm font-semibold uppercase">Suspended</h3>
          <span class="text-2xl">ðŸš«</span>
        </div>
        <p class="text-3xl font-bold text-red-400"><%= @users.where(suspended: true).count %></p>
      </div>

      <div class="bg-gradient-to-br from-purple-500/20 to-purple-600/20 backdrop-blur-lg border border-purple-500/30 rounded-xl p-6">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-purple-300 text-sm font-semibold uppercase">Admins</h3>
          <span class="text-2xl">ðŸ‘‘</span>
        </div>
        <p class="text-3xl font-bold text-purple-400"><%= @users.where(role: :admin).count %></p>
      </div>
    </div>

    <!-- Users Table -->
    <div class="bg-gray-800/50 backdrop-blur-lg border border-gray-700 rounded-xl shadow-2xl overflow-hidden">
      <div class="p-6 border-b border-gray-700">
        <h2 class="text-2xl font-bold">All Users</h2>
      </div>
      
      <% if @users.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="bg-gray-700/50 border-b border-gray-700">
                <th class="text-left py-4 px-6 text-gray-300 font-semibold">ID</th>
                <th class="text-left py-4 px-6 text-gray-300 font-semibold">Name/Email</th>
                <th class="text-left py-4 px-6 text-gray-300 font-semibold">Role</th>
                <th class="text-left py-4 px-6 text-gray-300 font-semibold">Balance</th>
                <th class="text-left py-4 px-6 text-gray-300 font-semibold">Status</th>
                <th class="text-left py-4 px-6 text-gray-300 font-semibold">Joined</th>
                <th class="text-center py-4 px-6 text-gray-300 font-semibold">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr class="border-b border-gray-800 hover:bg-gray-700/30 transition">
                  <td class="py-4 px-6 text-gray-400 font-mono">#<%= user.id %></td>
                  <td class="py-4 px-6">
                    <div>
                      <p class="text-white font-semibold"><%= user.name.presence || 'N/A' %></p>
                      <p class="text-gray-400 text-sm"><%= user.email %></p>
                    </div>
                  </td>
                  <td class="py-4 px-6">
                    <span class="px-3 py-1 <%= user.admin? ? 'bg-purple-500/20 text-purple-400' : 'bg-blue-500/20 text-blue-400' %> rounded-full text-sm font-semibold">
                      <%= user.admin? ? 'ðŸ‘‘ Admin' : 'ðŸ‘¤ User' %>
                    </span>
                  </td>
                  <td class="py-4 px-6">
                    <span class="text-green-400 font-bold">$<%= number_with_precision(user.balance || 0, precision: 2) %></span>
                  </td>
                  <td class="py-4 px-6">
                    <% if user.suspended? %>
                      <span class="px-3 py-1 bg-red-500/20 text-red-400 rounded-full text-sm font-semibold">ðŸš« Suspended</span>
                    <% else %>
                      <span class="px-3 py-1 bg-green-500/20 text-green-400 rounded-full text-sm font-semibold">âœ… Active</span>
                    <% end %>
                  </td>
                  <td class="py-4 px-6 text-gray-400">
                    <%= user.created_at.strftime("%b %d, %Y") %>
                  </td>
                  <td class="py-4 px-6 text-center">
                    <%= link_to admin_user_path(user), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition transform hover:scale-105" do %>
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                      View Profile
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <p class="text-xl text-gray-400">No users found</p>
        </div>
      <% end %>
    </div>

    <!-- Back Button -->
    <div class="mt-8 text-center">
      <%= link_to admin_dashbord_index_path, class: "inline-flex items-center px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-semibold rounded-lg transition" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Dashboard
      <% end %>
    </div>
  </div>
</div>
