<style>
  body {
    font-family: 'Inter', sans-serif;
  }
</style>

<body class="bg-black text-green-400 min-h-screen">
  <div class="min-h-screen bg-black text-green-400 p-6 sm:p-10">
    <div class="max-w-4xl mx-auto">
      <div class="bg-gray-900 border border-green-700 rounded-xl p-6 shadow-md">
        <h1 class="text-3xl font-bold mb-6 text-center">User Details</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <div class="bg-gray-800 p-4 rounded-lg">
            <p class="text-green-300 font-semibold">Email:</p>
            <p class="text-green-100"><%= @user.email %></p>
          </div>
          
          <div class="bg-gray-800 p-4 rounded-lg">
            <p class="text-green-300 font-semibold">Role:</p>
            <p class="text-green-100 capitalize"><%= @user.role %></p>
          </div>
          
          <div class="bg-gray-800 p-4 rounded-lg">
            <p class="text-green-300 font-semibold">Balance:</p>
            <p class="text-green-100">$<%= number_with_precision(@user.balance || 0, precision: 2) %></p>
          </div>
          
          <div class="bg-gray-800 p-4 rounded-lg">
            <p class="text-green-300 font-semibold">Status:</p>
            <p class="text-green-100"><%= @user.suspended? ? "Suspended" : "Active" %></p>
          </div>
          
          <div class="bg-gray-800 p-4 rounded-lg">
            <p class="text-green-300 font-semibold">Referral Code:</p>
            <p class="text-green-100"><%= @user.referral_code %></p>
          </div>
          
          <div class="bg-gray-800 p-4 rounded-lg">
            <p class="text-green-300 font-semibold">Joined:</p>
            <p class="text-green-100"><%= @user.created_at.strftime("%B %d, %Y") %></p>
          </div>
        </div>
        
        <div class="flex flex-wrap gap-3 justify-center">
          <%= link_to "Back to Admin Dashboard", admin_index_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded shadow-md transition" %>
          <%= button_to "Delete User", admin_user_path(@user), method: :delete, class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded shadow-md transition", data: { turbo_confirm: "Are you sure you want to delete this user?" } %>
        </div>
      </div>
    </div>
  </div>
</body>