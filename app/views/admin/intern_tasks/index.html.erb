<% content_for :title, "Manage Intern Tasks" %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white">
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400">
        ğŸ“š Manage Intern Tasks
      </h1>
      <p class="text-gray-300 mt-2">Create and manage specific tasks for interns</p>
    </div>

    <!-- Action Buttons -->
    <div class="mb-6 flex justify-end">
      <%= link_to new_admin_intern_task_path, class: "px-6 py-3 bg-gradient-to-r from-blue-600 to-cyan-600 rounded-xl hover:from-blue-700 hover:to-cyan-700 transition font-semibold" do %>
        <i class="fas fa-plus mr-2"></i>New Task
      <% end %>
    </div>

    <!-- Tasks Table -->
    <div class="bg-gray-800/50 backdrop-blur-lg rounded-2xl p-6 shadow-xl border border-gray-700 overflow-x-auto">
      <% if @intern_tasks.any? %>
        <table class="min-w-full divide-y divide-gray-700">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Title</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Priority</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Created By</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700">
            <% @intern_tasks.each do |task| %>
              <tr class="hover:bg-gray-700/50 transition">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="font-medium text-white"><%= task.title %></div>
                  <div class="text-sm text-gray-400 mt-1"><%= truncate(task.description, length: 100) %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% task_type_class = case task.task_type
                       when 'assignment' then 'bg-purple-500/20 text-purple-400'
                       when 'tutorial' then 'bg-blue-500/20 text-blue-400'
                       when 'project' then 'bg-green-500/20 text-green-400'
                       when 'quiz' then 'bg-yellow-500/20 text-yellow-400'
                       when 'video_learning' then 'bg-red-500/20 text-red-400'
                       else 'bg-gray-500/20 text-gray-400'
                     end %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full <%= task_type_class %>">
                    <%= task.task_type.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% status_class = case task.status
                       when 'pending' then 'bg-gray-500/20 text-gray-400'
                       when 'active' then 'bg-green-500/20 text-green-400'
                       when 'completed' then 'bg-blue-500/20 text-blue-400'
                       when 'archived' then 'bg-purple-500/20 text-purple-400'
                       else 'bg-gray-500/20 text-gray-400'
                     end %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full <%= status_class %>">
                    <%= task.status.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <% (1..task.priority.to_i).each do %>
                      <i class="fas fa-star text-yellow-400 mr-1"></i>
                    <% end %>
                    <% (task.priority.to_i + 1..5).each do %>
                      <i class="fas fa-star text-gray-600 mr-1"></i>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                  <%= task.admin.name.presence || task.admin.email %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "View", admin_intern_task_path(task), class: "text-blue-400 hover:text-blue-300 mr-3" %>
                  <%= link_to "Edit", edit_admin_intern_task_path(task), class: "text-green-400 hover:text-green-300 mr-3" %>
                  <%= link_to "Delete", admin_intern_task_path(task), 
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this task?" },
                      class: "text-red-400 hover:text-red-300" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="text-center py-12">
          <i class="fas fa-tasks text-6xl text-gray-600 mb-4"></i>
          <p class="text-gray-400 text-lg">No intern tasks created yet.</p>
          <p class="text-gray-500 mt-2">Create your first intern task to get started.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>