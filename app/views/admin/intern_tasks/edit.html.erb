<% content_for :title, "Edit Intern Task" %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white">
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-cyan-400">
        ✏️ Edit Intern Task
      </h1>
      <p class="text-gray-300 mt-2">Update the task details for interns</p>
    </div>

    <div class="max-w-3xl mx-auto bg-gray-800/50 backdrop-blur-lg rounded-2xl p-8 shadow-xl border border-gray-700">
      <%= form_with model: @intern_task, url: admin_intern_task_path(@intern_task), local: true, multipart: true, method: :patch, class: "space-y-6" do |f| %>
        <% if @intern_task.errors.any? %>
          <div class="bg-red-500/10 border border-red-500/50 text-red-400 p-4 rounded-xl mb-6">
            <h2 class="font-semibold text-sm mb-1">
              <%= pluralize(@intern_task.errors.count, "error") %> found:
            </h2>
            <ul class="list-disc pl-5 text-xs opacity-90">
              <% @intern_task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <!-- Title -->
          <div class="space-y-1">
            <%= f.label :title, class: "block text-sm font-medium text-gray-300 ml-1" %>
            <%= f.text_field :title, 
                  class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all" %>
          </div>

          <!-- Description -->
          <div class="space-y-1">
            <%= f.label :description, class: "block text-sm font-medium text-gray-300 ml-1" %>
            <%= f.text_area :description, rows: 4,
                  class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all resize-none" %>
          </div>

          <!-- Task Type -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-1">
              <%= f.label :task_type, "Task Type", class: "block text-sm font-medium text-gray-300 ml-1" %>
              <%= f.select :task_type, 
                  options_for_select(InternTask.task_types.keys.map { |type| [type.humanize, type] }, @intern_task.task_type),
                  { prompt: "Select task type..." },
                  { class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all" } %>
            </div>

            <!-- Priority -->
            <div class="space-y-1">
              <%= f.label :priority, "Priority (1-5)", class: "block text-sm font-medium text-gray-300 ml-1" %>
              <%= f.select :priority, 
                  options_for_select((0..5).map { |num| [num == 0 ? "Low" : "#{num} Stars", num] }, @intern_task.priority),
                  { prompt: "Select priority..." },
                  { class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all" } %>
            </div>
          </div>

          <!-- Status -->
          <div class="space-y-1">
            <%= f.label :status, class: "block text-sm font-medium text-gray-300 ml-1" %>
            <%= f.select :status, 
                options_for_select(InternTask.statuses.keys.map { |status| [status.humanize, status] }, @intern_task.status),
                { prompt: "Select status..." },
                { class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-xl text-white focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all" } %>
          </div>

          <!-- Video URL -->
          <div class="space-y-1">
            <%= f.label :video_url, "YouTube Video URL (optional)", class: "block text-sm font-medium text-gray-300 ml-1" %>
            <%= f.url_field :video_url, 
                  placeholder: "https://www.youtube.com/watch?v=...",
                  value: @intern_task.video_url,
                  class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all" %>
            <p class="text-xs text-gray-500 mt-1">Enter a YouTube URL for embedded video content</p>
          </div>

          <!-- Video File Upload -->
          <div class="space-y-1">
            <%= f.label :video_file, "Video File Upload (optional)", class: "block text-sm font-medium text-gray-300 ml-1" %>
            <%= f.file_field :video_file, 
                  accept: "video/mp4,video/mov,video/avi,video/wmv,video/flv,video/mkv",
                  class: "w-full px-4 py-3 bg-gray-700/50 border border-gray-600 rounded-xl text-white file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-600 file:text-white hover:file:bg-blue-700 transition-all" %>
            <p class="text-xs text-gray-500 mt-1">Upload a video file (MP4, MOV, AVI, etc.)</p>
            
            <!-- Current video file display -->
            <% if @intern_task.video_file.attached? %>
              <div class="mt-3 p-3 bg-gray-700/30 rounded-lg">
                <p class="text-sm text-gray-400 mb-2">Current video file:</p>
                <div class="flex items-center space-x-2">
                  <i class="fas fa-file-video text-blue-400"></i>
                  <span class="text-sm text-gray-300"><%= @intern_task.video_file.filename %></span>
                  <span class="text-xs text-gray-500">(<%= number_to_human_size(@intern_task.video_file.byte_size) %>)</span>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <div class="pt-6">
          <%= f.submit "Update Task", 
                class: "w-full bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white font-bold py-4 px-6 rounded-xl shadow-lg shadow-blue-900/20 transform transition active:scale-[0.98] cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-4 text-center">
        <%= link_to "← Back to Tasks", admin_intern_tasks_path, class: "text-blue-400 hover:text-blue-300" %>
      </div>
    </div>
  </div>
</div>