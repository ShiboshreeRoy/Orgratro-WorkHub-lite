<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-6">Image Test for Completion #11</h1>
  
  <% completion = InternTaskCompletion.find(11) %>
  
  <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">Completion Details</h2>
    <p><strong>ID:</strong> <%= completion.id %></p>
    <p><strong>User ID:</strong> <%= completion.user_id %></p>
    <p><strong>Intern Task ID:</strong> <%= completion.intern_task_id %></p>
    <p><strong>Status:</strong> <%= completion.status %></p>
    <p><strong>Attachment Attached:</strong> <%= completion.proof_attachment.attached? %></p>
    <% if completion.proof_attachment.attached? %>
      <p><strong>Content Type:</strong> <%= completion.proof_attachment.content_type %></p>
      <p><strong>Filename:</strong> <%= completion.proof_attachment.filename %></p>
      <p><strong>File Size:</strong> <%= number_to_human_size(completion.proof_attachment.byte_size) %></p>
      <p><strong>Variable?:</strong> <%= completion.proof_attachment.variable? %></p>
      <p><strong>Image?:</strong> <%= completion.proof_attachment.image? %></p>
    <% end %>
  </div>
  
  <% if completion.proof_attachment.attached? %>
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Image Tests</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Direct Image -->
        <div>
          <h3 class="text-lg font-medium mb-2">Direct Image</h3>
          <%= image_tag completion.proof_attachment, class: "max-w-full h-auto border rounded", alt: "Direct image" %>
        </div>
        
        <!-- Processed Variant -->
        <div>
          <h3 class="text-lg font-medium mb-2">Processed Variant (100x100)</h3>
          <%= image_tag completion.proof_attachment.variant(resize_to_limit: [100, 100]), class: "border rounded", alt: "Processed variant" %>
        </div>
      </div>
      
      <div class="mt-6">
        <h3 class="text-lg font-medium mb-2">Download Links</h3>
        <div class="space-y-2">
          <%= link_to "Download Original", rails_blob_path(completion.proof_attachment, disposition: "attachment"), class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
          <% if completion.proof_attachment.variable? %>
            <%= link_to "Download Variant", rails_representation_path(completion.proof_attachment.variant(resize_to_limit: [100, 100]), disposition: "attachment"), class: "inline-block px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>