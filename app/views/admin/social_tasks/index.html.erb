<body class="bg-gradient-to-br from-gray-900 via-black to-gray-900 text-blue-100 min-h-screen font-sans antialiased">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-3xl md:text-4xl font-bold text-white mb-2 tracking-tight">
            Social Media Campaigns
          </h1>
          <p class="text-blue-300/80 text-sm md:text-base">Manage and track your social engagement campaigns</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3">
          <%= link_to sample_template_admin_social_tasks_path, 
              class: "inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            Download Template
          <% end %>
          <%= link_to new_admin_social_task_path, 
              class: "inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Create Campaign
          <% end %>
        </div>
      </div>
    </div>

    <% if @social_tasks.any? %>
      <!-- Stats Summary -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-5 border border-gray-700/50">
          <div class="flex items-center">
            <div class="p-3 rounded-xl bg-blue-500/20">
              <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-blue-300">Total Campaigns</p>
              <p class="text-2xl font-bold text-white"><%= @social_tasks.count %></p>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-5 border border-gray-700/50">
          <div class="flex items-center">
            <div class="p-3 rounded-xl bg-green-500/20">
              <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-blue-300">Active Campaigns</p>
              <p class="text-2xl font-bold text-white"><%= @social_tasks.count %></p>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-5 border border-gray-700/50">
          <div class="flex items-center">
            <div class="p-3 rounded-xl bg-purple-500/20">
              <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-blue-300">Total Submissions</p>
              <p class="text-2xl font-bold text-white"><%= @social_tasks.sum { |t| t.social_task_proofs.count } %></p>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl p-5 border border-gray-700/50">
          <div class="flex items-center">
            <div class="p-3 rounded-xl bg-yellow-500/20">
              <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-blue-300">Pending Review</p>
              <p class="text-2xl font-bold text-white"><%= @social_tasks.sum { |t| t.social_task_proofs.where(status: 'pending').count } %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Campaigns Table -->
      <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl shadow-2xl border border-gray-700/50 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-700/50">
          <h2 class="text-lg font-semibold text-white">Campaign Management</h2>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-700/50">
            <thead class="bg-gray-800/80">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider">Campaign</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider">URL</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider">Description</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider">Created</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider">Submissions</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-gray-800/30 divide-y divide-gray-700/30">
              <% @social_tasks.each_with_index do |task, index| %>
                <tr class="hover:bg-gray-700/30 transition-all duration-200 <%= 'bg-gray-800/20' if index.even? %>">
                  <td class="px-6 py-5 whitespace-nowrap">
                    <div class="flex items-center">
                      <% if task.has_image? %>
                        <img class="h-12 w-12 rounded-xl object-cover mr-4 border-2 border-gray-600" src="<%= task.display_image_url %>" alt="<%= task.name %>">
                      <% else %>
                        <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-blue-500/20 to-purple-500/20 flex items-center justify-center mr-4 border-2 border-gray-600">
                          <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                        </div>
                      <% end %>
                      <div>
                        <div class="text-sm font-semibold text-white"><%= task.name %></div>
                        <div class="text-xs text-blue-300/70 mt-1">ID: <%= task.id %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-5 whitespace-nowrap">
                    <a href="<%= task.url %>" target="_blank" class="inline-flex items-center gap-1 text-sm text-blue-300 hover:text-blue-200 font-medium group">
                      <span class="truncate max-w-xs"><%= task.url %></span>
                      <svg class="w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    </a>
                  </td>
                  <td class="px-6 py-5 text-sm text-gray-300 max-w-xs">
                    <div class="line-clamp-2"><%= task.description %></div>
                  </td>
                  <td class="px-6 py-5 whitespace-nowrap text-sm text-gray-300">
                    <div class="flex items-center gap-1">
                      <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <%= task.created_at.strftime("%b %d, %Y") %>
                    </div>
                  </td>
                  <td class="px-6 py-5 whitespace-nowrap">
                    <div class="flex items-center gap-3">
                      <div class="flex items-center gap-1">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-900/30 text-blue-300">
                          <%= task.social_task_proofs.count %> total
                        </span>
                      </div>
                      <% pending_count = task.social_task_proofs.where(status: 'pending').count %>
                      <% if pending_count > 0 %>
                        <div class="flex items-center gap-1">
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-900/30 text-yellow-300">
                            <%= pending_count %> pending
                          </span>
                        </div>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-5 whitespace-nowrap text-sm font-medium">
                    <div class="flex items-center gap-2">
                      <%= link_to edit_admin_social_task_path(task), 
                          class: "inline-flex items-center gap-1 px-3 py-1.5 bg-gray-700 hover:bg-gray-600 text-gray-200 rounded-lg transition-all duration-200 text-xs font-medium" do %>
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                      <% end %>
                      <%= link_to admin_social_task_proofs_path(task_id: task.id), 
                          class: "inline-flex items-center gap-1 px-3 py-1.5 bg-green-700/80 hover:bg-green-600 text-green-100 rounded-lg transition-all duration-200 text-xs font-medium" do %>
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        View
                      <% end %>
                      <%= link_to admin_social_task_path(task), 
                          method: :delete, 
                          data: { confirm: "Are you sure you want to delete this campaign?" },
                          class: "inline-flex items-center gap-1 px-3 py-1.5 bg-red-700/80 hover:bg-red-600 text-red-100 rounded-lg transition-all duration-200 text-xs font-medium" do %>
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-2xl mb-6 border border-blue-500/20">
          <svg class="w-12 h-12 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-white mb-3">No Campaigns Created Yet</h3>
        <p class="text-blue-300/80 max-w-md mx-auto mb-8">Start building your social media engagement strategy by creating your first campaign.</p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <%= link_to new_admin_social_task_path, 
              class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Create Your First Campaign
          <% end %>
          <%= link_to sample_template_admin_social_tasks_path, 
              class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-semibold rounded-xl transition-all duration-300" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            Download CSV Template
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</body>