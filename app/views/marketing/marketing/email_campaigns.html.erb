<div class="min-h-screen bg-black text-green-400 p-6 sm:p-10">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">ðŸ“§ Email Campaigns</h1>
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Total Campaigns</h3>
        <p class="text-3xl font-bold text-green-400"><%= @email_campaigns.total_count rescue @email_campaigns.count %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Active Campaigns</h3>
        <p class="text-3xl font-bold text-green-400"><%= @email_campaigns.select(&:active?).count rescue @email_campaigns.where(status: 'active').count %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Scheduled</h3>
        <p class="text-3xl font-bold text-green-400"><%= @email_campaigns.select { |ec| ec.status == 'scheduled' }.count rescue @email_campaigns.where(status: 'scheduled').count %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Avg Open Rate</h3>
        <p class="text-3xl font-bold text-green-400"><%= @email_campaigns.average(:open_rate).present? ? "#{@email_campaigns.average(:open_rate).round(2)}%" : "N/A" rescue "N/A" %></p>
      </div>
    </div>
    
    <!-- Create New Campaign Form -->
    <div class="bg-gray-900 p-6 rounded-xl border border-green-700 mb-8">
      <h2 class="text-2xl font-semibold mb-4">Create New Email Campaign</h2>
      <%= form_with(model: @email_campaign, url: marketing_create_email_campaign_path, local: true, class: "space-y-4") do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="md:col-span-2">
            <%= form.label :name, class: "block text-sm font-medium mb-1" %>
            <%= form.text_field :name, class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :subject, class: "block text-sm font-medium mb-1" %>
            <%= form.text_field :subject, class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :sender_email, "From Email", class: "block text-sm font-medium mb-1" %>
            <%= form.email_field :sender_email, class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" %>
          </div>
          
          <div>
            <%= form.label :status, class: "block text-sm font-medium mb-1" %>
            <%= form.select :status, options_for_select([
              ['Draft', 'draft'],
              ['Scheduled', 'scheduled'],
              ['Active', 'active'],
              ['Sent', 'sent'],
              ['Paused', 'paused']
            ], @email_campaign.status), { prompt: 'Select Status' }, { class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" } %>
          </div>
          
          <div>
            <%= form.label :scheduled_at, "Schedule Time", class: "block text-sm font-medium mb-1" %>
            <%= form.datetime_field :scheduled_at, class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :content, class: "block text-sm font-medium mb-1" %>
            <%= form.text_area :content, rows: 8, class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" %>
          </div>
        </div>
        
        <div class="mt-4">
          <%= form.submit "Create Campaign", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded shadow-md transition" %>
        </div>
      <% end %>
    </div>
    
    <!-- Email Campaigns Table -->
    <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold">Existing Email Campaigns</h2>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-green-800">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left">Name</th>
              <th class="px-6 py-3 text-left">Subject</th>
              <th class="px-6 py-3 text-left">Status</th>
              <th class="px-6 py-3 text-left">Scheduled</th>
              <th class="px-6 py-3 text-left">Created</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-green-800">
            <% @email_campaigns.each do |campaign| %>
              <tr>
                <td class="px-6 py-4 font-medium"><%= campaign.name %></td>
                <td class="px-6 py-4 max-w-xs truncate"><%= campaign.subject %></td>
                <td class="px-6 py-4">
                  <span class="px-2 py-1 rounded-full text-xs 
                    <% case campaign.status %>
                      <% when 'active' %>bg-green-900 text-green-300
                      <% when 'draft' %>bg-yellow-900 text-yellow-300
                      <% when 'scheduled' %>bg-blue-900 text-blue-300
                      <% when 'sent' %>bg-purple-900 text-purple-300
                      <% when 'paused' %>bg-red-900 text-red-300
                      <% else %>bg-gray-900 text-gray-300
                    <% end %>">
                    <%= campaign.status&.capitalize || 'Draft' %>
                  </span>
                </td>
                <td class="px-6 py-4"><%= campaign.scheduled_at&.strftime("%Y-%m-%d %H:%M") || "Not scheduled" %></td>
                <td class="px-6 py-4"><%= campaign.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="mt-4">
        <%= paginate @email_campaigns %>
      </div>
    </div>
    
    <!-- Back to Dashboard -->
    <div class="mt-8 text-center">
      <%= link_to "â† Back to Marketing Dashboard", marketing_dashboard_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow-md transition" %>
    </div>
  </div>
</div>