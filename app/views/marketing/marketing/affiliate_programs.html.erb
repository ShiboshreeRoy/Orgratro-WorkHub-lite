<div class="min-h-screen bg-black text-green-400 p-6 sm:p-10">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-center">üåê Affiliate Programs</h1>
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Total Programs</h3>
        <p class="text-3xl font-bold text-green-400"><%= @affiliate_programs.total_count rescue @affiliate_programs.count %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Active Programs</h3>
        <p class="text-3xl font-bold text-green-400"><%= @affiliate_programs.select(&:is_active).count rescue @affiliate_programs.where(is_active: true).count %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Affiliates</h3>
        <p class="text-3xl font-bold text-green-400"><%= @affiliate_programs.sum { |ap| ap.affiliate_relationships.count } rescue AffiliateRelationship.count %></p>
      </div>
      
      <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
        <h3 class="text-lg font-semibold mb-2">Avg Commission</h3>
        <p class="text-3xl font-bold text-green-400"><%= @affiliate_programs.average(:commission_rate).present? ? "#{@affiliate_programs.average(:commission_rate).round(2)}%" : "N/A" rescue "N/A" %></p>
      </div>
    </div>
    
    <!-- Create New Program Form -->
    <div class="bg-gray-900 p-6 rounded-xl border border-green-700 mb-8">
      <h2 class="text-2xl font-semibold mb-4">Create New Affiliate Program</h2>
      <%= form_with(model: @affiliate_program, url: marketing_create_affiliate_program_path, local: true, class: "space-y-4") do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= form.label :name, class: "block text-sm font-medium mb-1" %>
            <%= form.text_field :name, class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" %>
          </div>
          
          <div>
            <%= form.label :commission_rate, "Commission Rate (%)", class: "block text-sm font-medium mb-1" %>
            <%= form.number_field :commission_rate, step: 0.01, class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :description, class: "block text-sm font-medium mb-1" %>
            <%= form.text_area :description, rows: 3, class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" %>
          </div>
          
          <div class="md:col-span-2">
            <%= form.label :terms, class: "block text-sm font-medium mb-1" %>
            <%= form.text_area :terms, rows: 4, class: "w-full p-2 bg-gray-800 border border-green-700 rounded text-green-400" %>
          </div>
          
          <div>
            <%= form.check_box :is_active, class: "mr-2 text-green-500" %>
            <%= form.label :is_active, "Active", class: "inline" %>
          </div>
        </div>
        
        <div class="mt-4">
          <%= form.submit "Create Program", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded shadow-md transition" %>
        </div>
      <% end %>
    </div>
    
    <!-- Affiliate Programs Table -->
    <div class="bg-gray-900 p-6 rounded-xl border border-green-700">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold">Existing Affiliate Programs</h2>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-green-800">
          <thead>
            <tr>
              <th class="px-6 py-3 text-left">Name</th>
              <th class="px-6 py-3 text-left">Description</th>
              <th class="px-6 py-3 text-left">Commission</th>
              <th class="px-6 py-3 text-left">Affiliates</th>
              <th class="px-6 py-3 text-left">Status</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-green-800">
            <% @affiliate_programs.each do |program| %>
              <tr>
                <td class="px-6 py-4 font-medium"><%= program.name %></td>
                <td class="px-6 py-4 max-w-xs truncate"><%= program.description %></td>
                <td class="px-6 py-4"><%= program.commission_rate %>%</td>
                <td class="px-6 py-4"><%= program.affiliate_relationships.count rescue 0 %></td>
                <td class="px-6 py-4">
                  <span class="px-2 py-1 rounded-full text-xs <%= program.is_active? ? 'bg-green-900 text-green-300' : 'bg-red-900 text-red-300' %>">
                    <%= program.is_active? ? 'Active' : 'Inactive' %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="mt-4">
        <%= paginate @affiliate_programs %>
      </div>
    </div>
    
    <!-- Back to Dashboard -->
    <div class="mt-8 text-center">
      <%= link_to "‚Üê Back to Marketing Dashboard", marketing_dashboard_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow-md transition" %>
    </div>
  </div>
</div>