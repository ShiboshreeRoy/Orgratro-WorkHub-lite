<% content_for :title, "All Contact Messages" %>
<body class="bg-black text-blue-300">
<div class="max-w-5xl mx-auto mt-12 p-8 bg-white rounded-xl shadow-md">
  <h1 class="text-3xl font-bold mb-8">Contact Messages</h1>

  <% if @contact_messages.empty? %>
    <p class="text-gray-500">No messages found.</p>
  <% else %>
    <% @contact_messages.each do |msg| %>
      <div class="border-b py-4">
        <p class="text-gray-800"><strong>Name:</strong> <%= msg.name %></p>
        <p class="text-gray-800"><strong>Email:</strong> <%= msg.email %></p>
        <p class="text-gray-800"><strong>Subject:</strong> <%= msg.subject %></p>
        <p class="text-gray-500 text-sm"><%= msg.created_at.strftime("%b %d, %Y at %I:%M %p") %></p>

        <div class="mt-3 flex gap-4">
          <%= link_to "View", contact_message_path(msg),
              class: "inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm" %>

          <%= button_to "Delete", contact_message_path(msg),
            method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this message?" },
            class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
</body>