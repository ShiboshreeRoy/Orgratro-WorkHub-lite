<body class="bg-black text-blue-300">
  <% content_for :title, "Message Details" %>

<div class="max-w-5xl mx-auto mt-12 p-10 bg-white shadow-xl rounded-2xl border border-gray-200">
  <h1 class="text-4xl font-extrabold text-blue-600 mb-10 tracking-tight">
    ðŸ“© Message Details
  </h1>

  <div class="grid gap-6 text-gray-800 text-base leading-relaxed">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <span class="font-semibold block text-gray-500">Name:</span>
        <p class="text-lg mt-1"><%= @contact_message.name %></p>
      </div>

      <div>
        <span class="font-semibold block text-gray-500">Email:</span>
        <p class="text-lg mt-1"><%= @contact_message.email %></p>
      </div>
    </div>

    <div>
      <span class="font-semibold block text-gray-500">Subject:</span>
      <p class="text-lg mt-1"><%= @contact_message.subject %></p>
    </div>

    <div>
      <span class="font-semibold block text-gray-500">Message:</span>
      <p class="mt-2 bg-gray-50 text-gray-700 text-lg p-6 rounded-lg border border-gray-100 shadow-sm whitespace-pre-line">
        <%= @contact_message.message %>
      </p>
    </div>

    <!-- Project Details Section -->
    <% if @contact_message.project_name.present? || @contact_message.project_description.present? %>
      <div class="border-t-2 border-blue-200 pt-6 mt-4">
        <h2 class="text-2xl font-bold text-blue-600 mb-4 flex items-center">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Project Information
        </h2>

        <div class="grid gap-6">
          <% if @contact_message.project_name.present? %>
            <div>
              <span class="font-semibold block text-gray-500">Project Name:</span>
              <p class="text-lg mt-1 font-medium text-blue-700"><%= @contact_message.project_name %></p>
            </div>
          <% end %>

          <% if @contact_message.project_description.present? %>
            <div>
              <span class="font-semibold block text-gray-500">Project Description:</span>
              <p class="mt-2 bg-blue-50 text-gray-700 text-base p-5 rounded-lg border border-blue-100 whitespace-pre-line">
                <%= @contact_message.project_description %>
              </p>
            </div>
          <% end %>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% if @contact_message.project_url.present? %>
              <div>
                <span class="font-semibold block text-gray-500">Project URL:</span>
                <p class="text-base mt-1">
                  <%= link_to @contact_message.project_url, @contact_message.project_url, target: "_blank", class: "text-blue-600 hover:text-blue-800 underline" %>
                </p>
              </div>
            <% end %>

            <% if @contact_message.contact_number.present? %>
              <div>
                <span class="font-semibold block text-gray-500">Contact Number:</span>
                <p class="text-base mt-1">
                  <%= link_to @contact_message.contact_number, "tel:#{@contact_message.contact_number}", class: "text-blue-600 hover:text-blue-800" %>
                </p>
              </div>
            <% end %>
          </div>

          <% if @contact_message.address.present? %>
            <div>
              <span class="font-semibold block text-gray-500">Address:</span>
              <p class="mt-2 bg-gray-50 text-gray-700 text-base p-4 rounded-lg border border-gray-100 whitespace-pre-line">
                <%= @contact_message.address %>
              </p>
            </div>
          <% end %>

          <!-- Project Image -->
          <% if @contact_message.project_image.attached? %>
            <div>
              <span class="font-semibold block text-gray-500 mb-2">Project Image:</span>
              <div class="rounded-lg overflow-hidden border-2 border-gray-200 shadow-md">
                <%= image_tag @contact_message.project_image, class: "w-full h-auto max-h-96 object-contain bg-gray-100" %>
              </div>
            </div>
          <% end %>

          <!-- Project Files -->
          <% if @contact_message.project_files.attached? %>
            <div>
              <span class="font-semibold block text-gray-500 mb-3">Project Files:</span>
              <div class="space-y-2">
                <% @contact_message.project_files.each do |file| %>
                  <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition">
                    <div class="flex items-center space-x-3">
                      <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                      <div>
                        <p class="font-medium text-gray-800"><%= file.filename %></p>
                        <p class="text-sm text-gray-500"><%= number_to_human_size(file.byte_size) %></p>
                      </div>
                    </div>
                    <%= link_to "Download", rails_blob_path(file, disposition: "attachment"), class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-10 flex flex-wrap gap-4">
    <%= link_to "â† Back to Inbox", contact_messages_path,
      class: "inline-flex items-center px-5 py-2.5 bg-gray-100 text-gray-700 hover:bg-gray-200 rounded-md font-medium transition" %>

    <%= button_to "ðŸ—‘ï¸ Delete Message", contact_message_path(@contact_message),
      method: :delete,
      data: { turbo_confirm: "Are you sure you want to delete this message?" },
      class: "inline-flex items-center px-5 py-2.5 bg-red-600 hover:bg-red-700 text-white rounded-md font-semibold transition" %>
  </div>
</div>
</body>